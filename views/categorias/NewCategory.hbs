<div class="col-md-6 mx-auto">
    <div class="card text-center">
        
        <div class="card-body">
            <form action="/categorias/create" method="POST">
            <div class="mb-3 text-center">
                <h3>Nueva Categoria</h3>
            </div>
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus required />
                </div>
                <div class="form-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="estado" id="inlineRadio1"  checked value=true>
                        <label class="form-check-label" for="inlineRadio1">Activo</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="estado" id="inlineRadio2" value=false>
                        <label class="form-check-label" for="inlineRadio2">Inactivo</label>
                    </div>
                </div>
                <div class="form-group">
                    
                    <select class="browser-default custom-select" name="usuario">
                        {{#each collecctionUsuario}}
                            <option value={{{_id}}}>{{nombre}}</option>
                        {{/each}}
                    </select>
                      
                </div>
                
                <div class="form-group">
                    <button class="btn btn-dark btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>